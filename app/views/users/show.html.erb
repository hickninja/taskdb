<h1> <%= @user.name %> </h1>
<h2> <%= mail_to @user.email %> </h2>

<hr>

<% if @tasks.length == 0 %>
<h2> <%= @user.name %> has no tasks! </h2>
<% else %>
<div class="row">
  <div class="span8 offset2">
    <h2> Tasks </h2>
    <table class="table table-striped table-condensed">
      <thead>
	<tr>
	  <th>Title / Description</th>
	  <th>Status</th>
	  <th>Milestone</th>
	  <th>Estimate</th>
	  <th>Spent</th>
	</tr>
      </thead>

      <tbody>
	<% @tasks.each do |task| %>
	<tr>
	  <td><b><%= link_to task.title, task %></b></br>
	    <div class="tasklist_description"><%= task.description %></div>
	  </td>
	  <td><%= task.status %></td>
	  <td><%= task.milestone %></td>
	  <td><%= task.estimate %></td>
	  <td><%= task.spent %></td>
	</tr>
	<% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>
